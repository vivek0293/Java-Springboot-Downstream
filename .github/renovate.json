{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "enabled": true
    }
  ],
  "gradle": {
    "enabled": true
  },
  "maven": {
    "enabled": true
  }
}
